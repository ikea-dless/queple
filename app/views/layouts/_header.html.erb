<div class="ui menu top fixed">
  <%= link_to 'queple', root_path, class: 'item', style: 'color: #21BA45 !important' %>
  <% if user_signed_in? %>
      <%= link_to '悩み相談', questions_path, class: 'item' %>
      <%= link_to '恋愛コラム', articles_path, class: 'item' %>
      <%= link_to 'プロフィール', profile_path, class: 'item' %>
  <% end %>
  <div class="right menu">
    <div class="item">
      <% if user_signed_in? %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'ui basic button' %>
      <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: 'ui green button' %>
      <% end %>
    </div>
    <div class="item">
      <%= form_tag search_path, method: :get, class: 'ui transparent left icon input' do %>
        <%= text_field_tag :q, '', placeholder: '恋愛コラム検索' %>
        <i class="search icon"></i>
      <% end %>
    ​</div>
  </div>
</div>
