

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <%= devise_error_messages! %>
    <h2 class="ui teal image header">ログイン</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui form' }) do |f| %>

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス' %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード' %>
          </div>
        </div>
        <div class="ui checkbox">
          <input name="user[remember_me]" type="hidden" value="0"><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
          <label>ログイン状態を保存する</label>
        </div>
        <%= f.submit 'ログイン', class: 'ui fluid large blue submit button' %>

    <% end %>
    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
